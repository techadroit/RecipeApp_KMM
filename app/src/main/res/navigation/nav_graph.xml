<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recipeListFragment">

    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.recipeapp.view.fragments.RecipeListFragment"
        android:label="RecipeListFragment" >
        <action
            android:id="@+id/nav_recipe_detail"
            app:destination="@id/recipeDetailFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" >
            <argument
                android:name="id"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/showSavedRecipesFragment"
        android:name="com.recipeapp.view.fragments.ShowSavedRecipesFragment"
        android:label="ShowSavedRecipesFragment" />
    <fragment
        android:id="@+id/recipeVideosFragment"
        android:name="com.recipeapp.view.fragments.RecipeVideosFragment"
        android:label="RecipeVideosFragment" />
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.recipeapp.view.fragments.RecipeDetailFragment"
        android:label="RecipeDetailFragment" >
        </fragment>
</navigation>